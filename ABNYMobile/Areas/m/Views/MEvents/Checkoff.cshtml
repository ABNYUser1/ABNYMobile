@model ABNYMobile.Models.Event

@{
    ViewBag.Title = "Event Checkoff";
}

<h2>EventCheckoff</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>Event</legend>

    <div class="display-label">Search Attendees</div>
    <div class="display-field">
    <textarea ></textarea>
    </div>

    <div class="display-label">Title</div>
    @foreach(var attendee in this.Model.Attendees) {
    <div class="display-field">
        @Html.CheckBox("ATTENDEE" + attendee.PersonId.ToString())
        Attendee @attendee.PersonId
    </div>
    }
    
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Save" /> |
        @Html.ActionLink("Back to List", "Index")
    </p>
}
